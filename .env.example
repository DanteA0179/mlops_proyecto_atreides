# ============================================
# Environment Variables - Energy Optimization Copilot
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# MLflow Configuration
# ============================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=energy-optimization
MLFLOW_S3_ENDPOINT_URL=  # Optional: for S3-compatible storage

# ============================================
# DVC Remote (Google Cloud Storage)
# ============================================
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account.json
DVC_REMOTE=gcs
GCS_BUCKET_NAME=energy-opt-dvc-remote

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true  # Set to false in production
API_WORKERS=4    # Number of uvicorn workers

# ============================================
# Ollama (Local LLM)
# ============================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=120  # seconds

# ============================================
# Database (DuckDB)
# ============================================
DUCKDB_PATH=data/steel.duckdb

# ============================================
# Model Configuration
# ============================================
MODEL_PATH=models/foundation/chronos_finetuned_v1.pth
MODEL_TYPE=chronos  # chronos, timesfm, xgboost, lightgbm
INFERENCE_DEVICE=cuda  # cuda, cpu
BATCH_SIZE=32

# ============================================
# Monitoring (Evidently)
# ============================================
EVIDENTLY_ENABLED=true
EVIDENTLY_REPORTS_PATH=reports/evidently/
DRIFT_THRESHOLD=0.2  # PSI threshold for drift detection

# ============================================
# Prefect Orchestration
# ============================================
PREFECT_API_URL=http://localhost:4200/api
PREFECT_LOGGING_LEVEL=INFO

# ============================================
# Cloud Deployment (GCP)
# ============================================
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
CLOUD_RUN_SERVICE_NAME=energy-opt-api
CLOUD_RUN_MIN_INSTANCES=0
CLOUD_RUN_MAX_INSTANCES=2

# ============================================
# Development
# ============================================
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
ENVIRONMENT=development  # development, staging, production

# ============================================
# Feature Flags
# ============================================
ENABLE_COPILOT=true
ENABLE_MONITORING=true
ENABLE_CACHING=true
CACHE_TTL=3600  # seconds
